{
  "extends": [
    "stylelint-config-standard-scss",
    "stylelint-config-recommended/scss"
  ],
  "rules": {
    "indentation": 4,
    "string-quotes": "single",
    "no-descending-specificity": null,
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": [
          "composes"
        ]
      }
    ]
  }
}
