# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
max_line_length = 120

[*.yaml]
indent_size = 2
trim_trailing_whitespace = true

[*.yml]
indent_size = 2
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.js]
trim_trailing_whitespace = true

[*.{scss,css,json}]
indent_size = 2

[makefile]
indent_style = tab
